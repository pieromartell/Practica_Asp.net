@model List<TbLibro>


<h1>Listado de Libros</h1>

<p class="btn btn-primary ">
    <a class="text-white" asp-action="CreateLibro">Crear</a>
</p>

<div class="container">
    <form asp-action="FiltrarLibro">
        <div class="row">
            <div class="col-lg-4">
                <label>Filtrar por descripcion</label>
                <input name="Descripcion" class="form-control" />
            </div>
            <div class="col-lg-4">
                <br />
                <button class="btn btn-dark text-white" type="submit">Filtrar Descripcion</button>
            </div>
        </div>
     </form>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID Libro
            </th>
            <th>
               Descripcion
            </th>
            <th>
                ID ASIGNATURA
            </th>
            <th>
                Stock
            </th>
            <th>
                Editar
            </th>
            <th>
                Eliminar
            </th>
        </tr>
    </thead>
        @foreach(var tbLibro in Model)
        {
    <tbody>
            <tr>
                <td>@Html.DisplayFor(i => tbLibro.IdLibro)</td>

           
                <td>@Html.DisplayFor(i => tbLibro.Descripcion)</td>


               
                <td>@Html.DisplayFor(i => tbLibro.IdAsingNavigation.Descripcion)</td>
                
                
           
          
                <td>@Html.DisplayFor(i => tbLibro.Stock)</td>

                <td>
                    <a asp-action="EditarLibro" asp-route-id="@tbLibro.IdLibro" class="btn btn-primary">Editar</a>
                </td>
                <td>
                    <a asp-action="DeleteLibro" asp-route-id="@tbLibro.IdLibro" class="btn btn-danger">Eliminar</a>
                </td>

            </tr>

    </tbody>
    }

</table>